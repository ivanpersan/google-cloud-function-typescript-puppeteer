{
    "compilerOptions": {    
      "module": "commonjs",
      "target": "es6",
      "baseUrl": "./",
      "rootDir": ".",
      "outDir": "dist",    
      "noImplicitAny": false,
      "sourceMap": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "declaration": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "pretty": true,
      "noFallthroughCasesInSwitch": true,
      "allowUnreachableCode": false,
      "strict": false
    }
  }